<% include ../header.ejs %>
    <!-- update -->
    <div class="col-xs-8 col-xs-8-width">
        <!-- Category form -->
        <div id="category-form" class="col-xs-8-custom normal-cursor">
            <form class="form-horizontal" id="frmCreateCat">
                <fieldset>
                    <legend>Create Category</legend>
                    <div class="form-group" id="categories-list">
                        <div class="col-sm-offset-2 col-xs-offset-2 col-sm-10 col-xs-10" id="displayCat">
                            <%if(categories.length > 0 ){%>
                            <%for(var i=0; i < categories.length; i++) {%>
                            <span class="label label-success frm-category">
                                <%=categories[i].CatName%>
                                <span class="glyphicon glyphicon-remove custom-glyph" aria-hidden="true"
                                      onclick="rmCat(this)" id="<%=categories[i]['@rid']+'%'+categories[i].CatName%>"></span>
                            </span>
                            <%}}%>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="frmCategory" class="col-sm-2 col-xs-2 control-label">Category</label>
                        <div class="col-sm-6 col-xs-6">
                            <input type="text" class="form-control input-sm" id="frmCategory" name="frmCategory" placeholder="Eg: Social Media" required="required" autocomplete="off">
                        </div>
                        <div class="col-sm-4 col-xs-4">
                            <button type="button" id="btnCreateCat" class="btn btn-labeled btn-danger btn-sm">
                            <span class="btn-label">
                                <i class="glyphicon glyphicon-check" aria-hidden="true"></i>
                            </span>
                                <strong>Create Category</strong>
                            </button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>

    </div> <!-- end -->

    <!-- Modal -->
    <div class="modal fade bs-example-modal-sm" id="catModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h5 class="modal-title" id="catModalTitle"></h5>
            </div>
            <div class="modal-body">
                <p id="catModalDetails"></p>
            </div>
            <div class="modal-footer">
                <form id="catDeleteForm">
                    <input type="hidden" id="catDelId" name="catDelId" value="" />
                    <button type="button" class="btn btn-success btn-sm" id="catModalBtnNo" data-dismiss="modal"><strong>No</strong></button>
                    <button type="button" class="btn btn-danger btn-sm" id="catModalBtnDel"><strong>Delete</strong></button>
                </form>
            </div>
        </div>
    </div>
</div>

    <% include ../sidebar.ejs %>
</div><!-- sidebar end -->
</div> <!-- /container -->

    <% include ../scripts.ejs %>
    <script src="/javascripts/category.js"></script>
<% include ../footer.ejs %>