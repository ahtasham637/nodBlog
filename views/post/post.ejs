<% include ../header.ejs %>
<!-- Post-page -->
<div class="col-xs-8 col-xs-8-width">

    <div id="post-page" class="col-xs-8-custom normal-cursor">
        <div id="title">
            <ul class="media-list">
                <li class="media">
                    <div class="media-body post-blogtitle">
                        <div class="col-xs-10 show-post-title-col post-title-width">
                            <h4 class="media-heading post-page" id="title-head"><%=postObj.Title%></h4>
                        </div>
                        <%if(session.user === username){%>
                        <div class="col-xs-2 caret-col-xs caret-width">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle caret-custom" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-custom-ul" role="menu" aria-labelledby="dropdownMenu1">
                                    <li id="edit" role="presentation">
                                        <a role="menuitem" tabindex="-1" href="#">
                                            <i class="glyphicon glyphicon-edit" aria-hidden="true"></i> Edit
                                        </a>
                                    </li>
                                    <li id="delete" role="presentation">
                                        <a role="menuitem" tabindex="-1" href="#">
                                            <i class="glyphicon glyphicon-trash" aria-hidden="true"></i> Delete
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <%}%>
                        <div class="post-details page-post-details">
                            <div class="col-xs-4 zero-padding-left page-post-colx4-width">
                                <div>28.8k Views</div>
                            </div>
                            <div class="pull-right">
                                <button type="button" class="btn btn-primary btn-sm facebook-button">Share on Facebook</button>
                                <button type="button" class="btn btn-primary btn-sm twitter-button">Share on Twitter</button>
                                <button type="button" class="btn btn-primary btn-sm pinterest-button">Share on Pinterest</button>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <hr class="hr" />
        <div id="description" class="description">
            <div>
                <%if(postObj.Photo){%><img src="/photo/pub/nb/<%=postObj.Photo%>?dim=950x534" alt="" class="img-thumbnail"><%}%>
            </div>
            <div class="show-post-details-padding">
                <p id="details-head">
                    <%=postObj.Details%>
                </p>
            </div>
            <%if(session.user === username){%>
            <!-- Edit Modal -->
            <div class="modal fade" id="ActionModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h5 class="modal-title" id="modalTitle"></h5>
                        </div>
                        <div class="modal-body" id="modalBody">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <textarea id="editArea" class="form-control" placeholder="Details Here"></textarea>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer" id="modalFooter">
                            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"><strong>Cancel</strong></button>
                            <button type="button" class="btn btn-primary btn-sm" id="saveEdit"><strong>Save changes</strong></button>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
        </div>
    </div>

</div> <!-- Posts end -->
<% include ../sidebar.ejs %>
</div><!-- sidebar end -->
</div> <!-- /container -->
<% include ../scripts.ejs %>
<script src="/javascripts/follow.js"></script>
    <%if(session.user === username){%>
<script src="/javascripts/showPost.js"></script>
<%}%>
<% include ../footer.ejs %>
